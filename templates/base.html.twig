<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <title>SIGNE</title>
    <link rel="shortcut icon" href="../assets/img/logovava.png" type="image/x-icon">
    <link rel="icon" href="../assets/img/logovava.png" type="image/x-icon">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.semanticui.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset("./build/css/base.css") }}">






    {% block stylesheets %}
        <style>
            .jumbotron{
                background: url('../assets/img/background.jpg') no-repeat center center;
            }
        </style>
    {% endblock %}
</head>
<body>
<div class="ui small menu">
    <a href="{{ path('home') }}" class="active item"><img src="../assets/img/logovava.png" style="width: 70px" alt=""></a>
    <a class="item" href="{{ path('map') }}">Accueil</a>
    <a class="item">Qui sommes nous ?</a>
    <a class="item">Télécharger l'application</a>
    <a class="item">Actualité</a>
    <div class="right menu">
        <div class="item">
            {% if not app.user %}
            <button class="ui btn btn-outline-primary" id="popup">Connexion</button>
            <div class="ui flowing popup top left transition hidden">
                <div class="ui three column divided center aligned grid">

                    <form class="ui form popupConnexion" action="{{ path('connexion') }}" method="POST">
                        <div class="field" style="margin-top: 10px">
                            <label for="mail">Email :</label>
                            <input type="text" id="mail" name="_username" placeholder="exemple@gmail.com">
                        </div>
                        <div class="field">
                            <label for="mdp">Mot de passe :</label>
                            <input type="password" id="mdp" name="_password" placeholder="Mot de passe">
                        </div>


                        <a href="{{ path('inscription') }}">Inscription ?</a>
                        <hr>

                        <div class="container" style="margin-bottom: 10px">
                            <a href="{{ path('connexion') }}"><button class="btn btn-outline-success" type="submit">Connexion</button></a>
                        </div>
                    </form>
                    {% else %}
                    {#<button class="ui btn btn-outline-secondary" id="monCompte">Mon compte</button>#}
                    <span style="margin-right: 5px" id="nomBarNav">{{ app.user.nom }}</span>
                    <a href="#" id="monCompte"><img class="ui avatar image" src="{{ app.user.photo }}"></a>
                    <div class="ui flowing popup top left transition hidden">
                        <div class="ui three column divided center aligned grid">



                            <div class="container" style="margin-top: 10px">
                                <a href="{{ path('utilisateur') }}"><button class="btn btn-outline-secondary" type="submit">Mon compte</button></a>
                                <hr>
                                <a href="{{ path('deconnexion') }}"><button class="btn btn-outline-danger" type="submit" style="margin-bottom: 10px">Deconnexion</button></a>
                            </div>

                            {% endif %}


                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% for label, flashes in app.session.flashbag.all %}
            {% for flash in flashes %}
                {% if ( label == 'success' ) %}
                    <div class="alert alert-success alert-dismissible fade show">
                        {{ flash }}
                    </div>
                {% elseif ( label == 'error' ) %}
                    <div class="alert alert-danger alert-dismissible fade show">
                        {{ flash }}
                    </div>
                {% endif %}
            {% endfor %}
        {% endfor %}
        <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.19/js/dataTables.semanticui.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>
        <script src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyCiGsX1wx-4Ry3eEOG6HCT7e3Xz9lwJqZY"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui-calendar/0.0.8/calendar.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>


        <script>
            $('#popup')
                .popup({
                    inline: true,
                    on:'click'
                })
            ;
        </script>
        <script>
            $('#monCompte')
                .popup({
                    inline: true,
                    on:'click'
                })
            ;
        </script>
        {% block body %}
        {% endblock %}


        {% block javascripts %}
        {% endblock %}
    </div>
</div>
</body>
</html>