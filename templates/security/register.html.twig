{% extends 'base.html.twig' %}

{#{% form_theme formRegister 'bootstrap_4_layout.html.twig' %}#}

{% block title %}Hello!{% endblock %}

{% block body %}
    <div class="container" style="width: 700px; margin-top: 50px">

        <h1 style="text-align: center; font-size: 50px; margin-top: 20px">Inscription</h1><hr>

        {{ form_start(formRegister) }}

        {{ form_row(formRegister.nom, {'attr' : {'placeholder' : "Nom"}}) }}
        {{ form_row(formRegister.prenom, {'attr' : {'placeholder' : "Prenom"}}) }}
        {{ form_row(formRegister.mail, {'attr' : {'placeholder' : "Email"}}) }}
        {{ form_row(formRegister.mdp, {'label': "Mot de passe", 'attr' : {'placeholder' : "Mot de passe"}}) }}
        {{ form_row(formRegister.confirm_mdp, {'label': "Mot de passe", 'attr' : {'placeholder' : "Confirmez votre mot de passe"}}) }}

        <button type="submit" class="btn btn-success pull-right" style="margin-bottom: 30px; ">Inscription</button>

        {{ form_end(formRegister) }}

    </div>


{% endblock %}
