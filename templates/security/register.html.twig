{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-light barNav fixed-top" style="background-color: #79D1C9">
        <a href="{{ path('home') }}" class="active item"><img src="{{ asset("./build/image/logovava.png") }}" style="width: 70px" alt=""></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('map') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link">Obtenir vava</a>
                </li>
            </ul>

            <div class="right menu">
                <div class="item btn-nav">
                    {% if not app.user %}
                    <button type="button" class="btn btn-outline-secondary"><a href="{{ path('inscription') }}">Inscription</a></button>
                    <button type="button" class="btn btn-outline-secondary" style="margin-right: 20px" id="popup">Connexion</button>


                    <div class="ui flowing popup top left transition hidden">
                        <div class="ui three column divided center aligned grid">

                            <form class="ui form popupConnexion" action="{{ path('connexion') }}" method="POST">
                                <div class="field" style="margin-top: 10px">
                                    <label for="mail">Email :</label>
                                    <input type="text" id="mail" name="_username" placeholder="exemple@gmail.com">
                                </div>
                                <div class="field">
                                    <label for="mdp">Mot de passe :</label>
                                    <input type="password" id="mdp" name="_password" placeholder="Mot de passe">
                                </div><hr>
                                <div class="container" style="margin-bottom: 10px">
                                    <a href="{{ path('connexion') }}"><button class="btn btn-outline-success" type="submit">Connexion</button></a>
                                </div>
                            </form>
                            {% else %}
                            <button class="ui btn btn btn-outline-light" id="monCompte" style="margin-right: 89px; padding: 5px 50px 5px 50px">{{ app.user.nom }}</button>
                            {#<span style="margin-right: 5px" id="monCompte"></span>#}
                            <div class="ui flowing popup top left transition hidden">
                                <div class="ui three column divided center aligned grid">
                                    <div class="container" style="margin-top: 10px">
                                        <a href="{{ path('utilisateur') }}"><button class="btn btn-outline-secondary" type="submit">Mon compte</button></a>
                                        <hr>
                                        <a href="{{ path('deconnexion') }}"><button class="btn btn-outline-danger" type="submit" style="margin-bottom: 10px">Deconnexion</button></a>

                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
