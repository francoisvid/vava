{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}

{% block body %}
    <h1>Entreprise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Tel</th>
                <th>Mail</th>
                <th>Logo</th>
                <th>Remarque</th>
                <th>SalariesFormes</th>
                <th>SiteWeb</th>
                <th>Pub</th>
                <th>Visible</th>
                <th>IsDeleted</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.id }}</td>
                <td>{{ entreprise.nom }}</td>
                <td>{{ entreprise.tel }}</td>
                <td>{{ entreprise.mail }}</td>
                <td>{{ entreprise.logo }}</td>
                <td>{{ entreprise.remarque }}</td>
                <td>{{ entreprise.salariesFormes }}</td>
                <td>{{ entreprise.siteWeb }}</td>
                <td>{{ entreprise.pub ? 'Yes' : 'No' }}</td>
                <td>{{ entreprise.visible ? 'Yes' : 'No' }}</td>
                <td>{{ entreprise.isDeleted ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('entreprise_show', {'id': entreprise.id}) }}">show</a>
                    <a href="{{ path('entreprise_edit', {'id': entreprise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('entreprise_new') }}">Create new</a>
{% endblock %}
