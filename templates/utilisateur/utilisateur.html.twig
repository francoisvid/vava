{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}


{% block body %}

    <head>
        <link rel="stylesheet" href="{{ asset("./build/css/user.css")}}">
    </head>

<body>

    <div class="ui grid dataTableCustom">
    <div class="four wide column">
        <div class="ui vertical fluid tabular menu">
            <a class="item active" id="info">
                Mes informations
            </a>
            <a class="item" id="fav">
                Mes favoris
            </a>
            <a class="item" id="map" href="{{ path('map') }}">
                Retour Map
            </a>
        </div>
    </div>
    <div class="twelve wide stretched column">
    <div class="container item fav" style="display:none; width:80%; margin-right: 190px; margin-top: 30px;min-height: 500px">
        <div class="twelve wide stretched column">
            <div id="fav">


                <table id="tablefav" class="ui compact selectable striped celled table" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Adresse</th>
                        <th>Téléphone</th>
                        <th>Action</th>

                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Adresse</th>
                        <th>Téléphone</th>
                        <th>Action</th>
                    </tr>
                    </tfoot>
                </table>


            </div>
        </div>
    </div>

    {% if app.user %}

    <div class="container item info centered active" style="width:80%;margin-right: 190px; margin-top: 30px;">
    <form method="POST" class="ui form" id="formUser">
        <h2 class="ui dividing header">Mes Informations</h2>
        <div class="two fields">
            <div class="field">
                <label>Nom</label>
                <input type="text" name="nom" id="nom" value="{{ utilisateur.nom }}">
            </div>
            <div class="field">
                <label>Prenom</label>
                <input type="text" name="prenom" id="prenom" value="{{ utilisateur.prenom }}">
            </div>
        </div>
        <div class="two fields">
            <div class="field">
                <label>Adresse mail</label>
                <input type="text" name="mail" id="mail" value="{{ utilisateur.mail }}">
            </div>
            <div class="field">
                <label>Numéro de téléphone</label>
                <input type="text" name="tel" id="tel" value="{{ utilisateur.tel }}">
            </div>
        </div>
        <div class="four fields">
            <div class="field">
                <label>Date de Naissance</label>
                <div class="field">
                    <div class="ui calendar" id="calendrier">
                        <div class="ui input left icon">
                            <i class="calendar icon"></i>
                            <input type="text" name="datenaissance" id="datenaissance" placeholder="Date de naissance" >
                        </div>
                    </div>
                </div>
            </div>
            {#<p>Date: <input type="text" id="datepicker"></p>#}
            <div class="field">
                <label>Sexe</label>
                <select class="ui fluid dropdown" type="text" name="sexe" id="sexe" value="{{ utilisateur.sexe }}">
                    <option value="homme">Homme</option>
                    <option value="femme">Femme</option>
                    <option value="autre">Autre</option>
                </select>
            </div>
        </div>
        <div class="four fields">
            <div class="field">
                <label>Numéro</label>
                <input type="number" name="numero" id="numero" placeholder="11" value="{{ utilisateur.adresse.numero }}">
            </div>
            <div class="field">
                <label>Rue</label>
                <input type="text" name="rue" id="rue" placeholder="Rue, impasse..." value="{{ utilisateur.adresse.rue }}">
            </div>
            <div class="field">
                <label>Ville</label>
                <input type="text" name="ville" id="ville" placeholder="Montpellier" value="{{ utilisateur.adresse.ville }}">
            </div>
            <div class="field">
                <label>Code postal</label>
                <input type="text" name="codepostal" id="codepostal" placeholder="34000" value="{{ utilisateur.adresse.codepostal }}">
            </div>
        </div>
        <h2 class="ui dividing header">Sécurité</h2>
        <div class="field">
            <div class="two fields">
                <div class="field">
                       <label>Mot de passe</label>
                    <input type="password" name="mdp" placeholder="Mot de passe">
                </div>
                <div class="field">
                    <label>Répéter</label>
                    <input type="password" name=mdp" placeholder="Répéter votre mot de passe">
                </div>
            </div>
        </div>
        <hr>
        <div class="fields">
            <div class="fourteen wide field">

            </div>
            <div class="three wide field">
                <button type="submit" onclick="update({{ utilisateur.id }})" class="ui button primary">Mettre a jour</button>
            </div>
        </div>
    </form>
    {% endif %}


    <script>
        $(document).ready(function () {
            $( function() {
                $( "#datenaissance" ).datepicker();
            } );

            $('#delete').on('click', function() {
                $('.ui.modal').modal('show')
            });

                    $('#tablefav').DataTable( {

                        ajax: {
                            url: '/favoris/get/1',
                            dataSrc: ''
                        },

                        columns: [
                            { "data": "id" },
                            { "data": "nom" },
                            { "data": "adresse" },
                            { "data": "tel" },
                            {
                                "data": null,
                                "defaultContent":
                                    "<button class=\"ui secondary basic button\" id=\"call\">Appeler</button>\n" +
                                    // "<button class=\"ui primary basic button\" id=\"view\">Voir</button>\n" +
                                    "<button class=\"ui red basic button\" id=\"dell\">Supprimer</button>\n"
                            }
                        ]
                    } );



            $('#tablefav tbody').on( 'click', '#call', function () {
                alert("Appeler ?");



                
            } );


            $('#tablefav tbody').on( 'click', '#dell', function () {
                alert("Supprimer ?")



            } );






            });




    </script>


    <script src="{{ asset("./build/js/user.js")}}" type="text/javascript"></script>
    </div>
    </div>
    </div>
</body>
{% endblock %}


